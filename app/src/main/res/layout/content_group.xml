<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".GroupActivity"
    tools:showIn="@layout/app_bar_group">

    <ImageButton
        android:id="@+id/group_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/add_btn" />

    <TextView
        android:id="@+id/group_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="15dp"
        android:text="Group Name"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/group_desc_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/group_name_txt"
        android:padding="15dp"
        android:text="Group Desc."
        android:textSize="15dp" />

    <!--<ImageButton-->
    <!--android:layout_width="50dp"-->
    <!--android:layout_height="50dp"-->
    <!--android:id="@+id/join_group"-->
    <!--android:layout_marginEnd="44dp"-->
    <!--android:layout_marginBottom="38dp"-->
    <!--android:src="@mipmap/ic_group_add_white_24dp"-->
    <!--android:layout_alignBottom="@+id/group_cover"-->
    <!--android:layout_alignParentEnd="true" />-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/group_posts_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/group_desc_txt"
        android:layout_marginTop="5dp"></android.support.v7.widget.RecyclerView>


</LinearLayout>
