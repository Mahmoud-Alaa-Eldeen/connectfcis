<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.khaledahmed.connectfcis.UserProfileActivity">

        <RelativeLayout
            android:id="@+id/im_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/userProfileImage"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@android:color/white"
                android:clickable="false"
                android:src="@drawable/person" />

            <ImageButton
                android:id="@+id/editProfileButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/userProfileImage"
                android:clickable="false"
                android:background="@android:color/white"
                android:padding="10dp"
                android:src="@mipmap/ic_mode_edit_black_24dp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/username_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/im_activity"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:hint="@string/username"
            android:textAlignment="center"
            android:textColorHint="@color/colorAccent"
            android:textSize="20dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/password_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_txt"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:hint="Your Password"
            android:textColorHint="@color/colorPrimary"
            android:textSize="20dp"  />

        <EditText
            android:id="@+id/type_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:hint="Staff Type"
            android:textColorHint="@color/colorPrimary"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/dept_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:hint="Department"
            android:textColorHint="@color/colorPrimary"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/course_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dept_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:hint="Course/s"
            android:textColorHint="@color/colorPrimary"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/officeLoc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:hint="Office Location"
            android:textColorHint="@color/colorPrimary"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/status_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/officeLoc_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:hint="User status"
            android:textColorHint="@color/colorPrimary"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/userInfo_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:hint="About User"
            android:textColorHint="@color/colorPrimary" />
        <Button
            android:id="@+id/savechangeBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userInfo_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:text="Save Changes"
            android:textColor="@color/colorPrimary" />
    </RelativeLayout>

</ScrollView>