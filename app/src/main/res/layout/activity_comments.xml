<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.khaledahmed.connectfcis.Comments">
    <Button
        android:id="@+id/event_comment_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:drawableLeft="@mipmap/ic_comment_white_24dp"
        android:padding="10dp"
        android:text="Comment"
        android:textColor="@color/colorWhite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/event_comment_layout"
        android:weightSum="1">

        <EditText
            android:id="@+id/event_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:hint="Write a comment ..."
            android:inputType="textMultiLine"
            android:padding="15dp"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/eventCommentSubmitBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@color/colorAccent"
            android:padding="5dp"
            android:src="@mipmap/ic_comment_white_24dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/event_comments_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        ></ListView>
</LinearLayout>
